<!-- Sidebar functionality -->
<script>
  (function() {
    // Wait for DOM to be fully loaded
    function ready(fn) {
      if (document.readyState !== 'loading') {
        fn();
      } else {
        document.addEventListener('DOMContentLoaded', fn);
      }
    }
    
    ready(function() {
      console.log('DOM loaded - initializing sidebar');
      
      // Get sidebar elements
      const sidebar = document.getElementById('sidebar');
      const menuToggle = document.getElementById('menuToggle');
      const sidebarClose = document.getElementById('sidebarClose');
      const sidebarOverlay = document.getElementById('sidebarOverlay');
      const sidebarItems = document.querySelectorAll('.sidebar-item');
      
      if (!sidebar || !menuToggle || !sidebarClose || !sidebarOverlay) {
        console.error('Missing required elements for sidebar functionality');
        return;
      }
      
      function openSidebar() {
        console.log('Opening sidebar');
        sidebar.classList.add('active');
        sidebarOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
        
        // Add a small delay to trigger the staggered animation
        setTimeout(() => {
          sidebarItems.forEach(item => {
            item.style.opacity = '1';
            item.style.transform = 'translateX(0)';
          });
        }, 100);
      }
      
      function closeSidebar() {
        console.log('Closing sidebar');
        sidebar.classList.remove('active');
        sidebarOverlay.classList.remove('active');
        document.body.style.overflow = '';
        
        // Reset the item animations
        sidebarItems.forEach(item => {
          item.style.opacity = '0';
          item.style.transform = 'translateX(-20px)';
        });
      }
      
      // Event listeners
      menuToggle.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Menu toggle clicked');
        openSidebar();
      });
      
      sidebarClose.addEventListener('click', function(e) {
        e.preventDefault();
        closeSidebar();
      });
      
      sidebarOverlay.addEventListener('click', function() {
        closeSidebar();
      });
      
      // Add keyboard support (ESC to close)
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && sidebar.classList.contains('active')) {
          closeSidebar();
        }
      });
      
      // Highlight active page
      const currentPath = window.location.pathname;
      const sidebarLinks = document.querySelectorAll('.sidebar-link');
      
      sidebarLinks.forEach(link => {
        const linkPath = link.getAttribute('href');
        if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
          link.classList.add('active');
          if (link.closest('.sidebar-item')) {
            link.closest('.sidebar-item').classList.add('current');
          }
        }
      });
    });
  })();
</script>

