<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>KHealth - Medical Student Prep</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <!-- Lottie Animation Player -->
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.js"></script>
</head>
<body>
  <!-- Sidebar with Green Theme -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <div class="d-flex align-items-center">
        <div class="logo-icon me-2">
          <i class="fa-solid fa-user-doctor"></i>
        </div>
        <div class="logo-text">KHealth</div>
      </div>
      <button class="sidebar-close" id="sidebarClose">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="sidebar-content">
      <ul class="sidebar-menu">
        <li class="sidebar-item">
          <a href="/" class="sidebar-link">
            <i class="fas fa-home me-2"></i>
            <span>Home</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/interviews" class="sidebar-link">
            <i class="fas fa-comments me-2"></i>
            <span>Interviews</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/questions/practise" class="sidebar-link">
            <i class="fas fa-question-circle me-2"></i>
            <span>Question Practice</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/performance" class="sidebar-link">
            <i class="fas fa-chart-line me-2"></i>
            <span>Performance</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/learning" class="sidebar-link">
            <i class="fas fa-book me-2"></i>
            <span>Learning</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  
  <!-- Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>
  
  <header class="site-header">
    <div class="container">
      <div class="row align-items-center justify-content-between">
        <div class="col-auto">
          <button type="button" class="menu-toggle" id="menuToggle" aria-label="Open menu" onclick="document.getElementById('sidebar').classList.add('active'); document.getElementById('sidebarOverlay').classList.add('active'); document.body.style.overflow='hidden';">
            <i class="fas fa-bars"></i>
          </button>
        </div>
        <div class="col text-center">
          <a href="/" class="logo-link">
            <div class="d-flex align-items-center justify-content-center">
              <div class="logo-icon">
                <i class="fa-solid fa-user-doctor"></i>
              </div>
              <div class="logo-text">KHealth</div>
            </div>
          </a>
        </div>
        <div class="col-auto">
          <div class="header-actions">
            <a href="/search" class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></a>
            <a href="/locations" class="btn btn-locations"><i class="fa-solid fa-location-dot"></i> Locations</a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
</body>
</html>

